<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>withjre_windows</id>

  <includeBaseDirectory>false</includeBaseDirectory>
  <includeSiteDirectory>false</includeSiteDirectory>

  <formats>
    <format>jar</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${project.build.directory}${file.separator}jinput-natives-all</directory>
      <outputDirectory>${file.separator}ZXPolyEmul.app${file.separator}Contents${file.separator}MacOS</outputDirectory>
      <includes>
        <include>*.jnilib</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}${file.separator}src${file.separator}assembly${file.separator}mac</directory>
      <outputDirectory>${file.separator}</outputDirectory>
      <excludes>
        <exclude>ZXPolyEmul.app${file.separator}Contents${file.separator}MacOS${file.separator}zxpoly</exclude>
        <exclude>
          ZXPolyEmul.app${file.separator}Contents${file.separator}Resources${file.separator}**${file.separator}*
        </exclude>
      </excludes>
      <includes>
        <include>*/**</include>
      </includes>
      <filtered>true</filtered>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}${file.separator}src${file.separator}assembly${file.separator}mac</directory>
      <outputDirectory>${file.separator}</outputDirectory>
      <includes>
        <include>ZXPolyEmul.app${file.separator}Contents${file.separator}Resources${file.separator}*</include>
      </includes>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}${file.separator}jre_macos_arm</directory>
      <outputDirectory>
        ${file.separator}ZXPolyEmul.app${file.separator}Contents${file.separator}MacOS${file.separator}jre
      </outputDirectory>
      <includes>
        <include>*/**</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>
        ${project.basedir}${file.separator}src${file.separator}assembly${file.separator}mac${file.separator}ZXPolyEmul.app${file.separator}Contents${file.separator}MacOS${file.separator}zxpoly
      </source>
      <destName>zxpoly</destName>
      <outputDirectory>${file.separator}ZXPolyEmul.app${file.separator}Contents${file.separator}MacOS</outputDirectory>
      <fileMode>0755</fileMode>
    </file>
    <file>
      <source>${project.build.directory}${file.separator}${project.artifactId}-${project.version}.jar</source>
      <destName>${project.artifactId}-${project.version}.jar</destName>
      <outputDirectory>${file.separator}ZXPolyEmul.app${file.separator}Contents${file.separator}MacOS</outputDirectory>
    </file>
  </files>
</assembly>
