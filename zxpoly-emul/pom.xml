                                    <goal>cache-jdk</goal>
                                </goals>
                                <configuration>
                                    <jdkPathProperty>mvnjlink.jdk.work.path</jdkPathProperty>
                                    <provider>${openjdk.provider}</provider>
                                    <providerConfig>
                                        <type>${openjdk.bundled.type}</type>
                                        <version>${openjdk.bundled}</version>
                                        <arch>amd64</arch>
                                    </providerConfig>
                                </configuration>
                            </execution>
                            <execution>
                                <id>cache-linux-jdk</id>
                                <goals>
                                    <goal>cache-jdk</goal>
                                </goals>
                                <configuration>
                                    <jdkPathProperty>mvnjlink.jdk.linux.path</jdkPathProperty>
                                    <provider>${openjdk.provider}</provider>
                                    <providerConfig>
                                        <type>${openjdk.bundled.type}</type>
                                        <version>${openjdk.bundled}</version>
                                        <os>linux</os>
                                        <arch>amd64</arch>
                                    </providerConfig>
                                </configuration>
                            </execution>
                            <execution>
                                <id>cache-linux-aarch64-jdk</id>
                                <goals>
                                    <goal>cache-jdk</goal>
                                </goals>
                                <configuration>
                                    <jdkPathProperty>mvnjlink.jdk.linux.aarch64.path</jdkPathProperty>
                                    <provider>${openjdk.provider}</provider>
                                    <providerConfig>
                                        <type>${openjdk.bundled.type}</type>
                                        <version>${openjdk.bundled}</version>
                                        <os>linux</os>
                                        <arch>aarch64</arch>
                                    </providerConfig>
