                                <goals>
                                    <goal>cache-jdk</goal>
                                </goals>
                                <configuration>
                                    <jdkPathProperty>mvnjlink.jdk.macos.aarch64.path</jdkPathProperty>
                                    <provider>${openjdk.provider}</provider>
                                    <providerConfig>
                                        <type>${openjdk.bundled.type}</type>
                                        <os>macos</os>
                                        <version>${openjdk.bundled}</version>
